<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Blog entry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr style = "background-color: beige">
        <td><%= post.title %></td>
        <td><%= post.user.email %></td>
        <td><%= post.blog_entry %></td>
        <td>
        <div class = "btn-group btn-group-md" role = "group", style="float:right;">
        <%= link_to 'Show', post, class: "btn btn-success" %>
        <%= link_to 'Edit', edit_post_path(post), class: "btn btn-primary" %>
        <%= link_to 'Destroy', post, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
